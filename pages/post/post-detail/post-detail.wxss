
.container{
  display: flex;
  flex-direction: column;
}

.head-image{
  width: 100%;
  height: 460rpx;
}

.author-data{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar{
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #666;
}

.const-text{
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #999;
}

.data{
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
  vertical-align: middle;
}

.title{
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  color: #4b556c;
  letter-spacing: 2px;
}

.tool{
  margin-top: 20rpx;
}

.circle-image{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.circle-image Image{
  width: 90rpx;
  height: 90rpx;
}

.share-image{
  margin-left: 30rpx;
}

.horizon{
  width: 600rpx;
  height: 2px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail{
  color: #666;
  margin-top: 20rpx;
  margin-right: 30rpx;
  margin-left: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}

.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}